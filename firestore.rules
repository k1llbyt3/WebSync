
/**
 * @fileoverview Firestore Security Rules for WorkSync application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data, while enabling shared access to collaborative resources.
 * All personal data is nested under /users/{userId}, with ownership enforced via path-based matching and internal ID validation.
 * Collaboration hubs, stored in /collaborationHubs/{collaborationHubId}, use a combination of ownerId and userIds array to manage access.
 * Tasks are stored in a root collection `/tasks` to allow for cross-user queries (e.g., assignments), with security handled by fields within the document.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only to the user themselves.
 * - /tasks/{taskId}: Global collection for tasks. Access is controlled by `userId` and `assigneeId` fields.
 * - /users/{userId}/reminders/{reminderId}: Stores reminders for a user, accessible only by that user.
 * - /users/{userId}/meetings/{meetingId}: Stores meetings for a user, accessible only to that user.
 * - /collaborationHubs/{collaborationHubId}: Stores collaboration hubs, accessible to the owner and users listed in the 'userIds' array.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isOwner(userId) && resource.data.uid == userId;
      allow delete: if isOwner(userId) && resource != null;
    }

    match /tasks/{taskId} {
      function isCreator() {
        return request.auth.uid == resource.data.userId;
      }
      function isAssignee() {
        return request.auth.uid == resource.data.assigneeId;
      }
      function isCreating() {
         return request.auth.uid == request.resource.data.userId;
      }

      allow get: if isSignedIn() && request.auth.uid in resource.data.userIds;
      allow list: if isSignedIn();
      allow create: if isSignedIn() && isCreating();
      allow update: if isSignedIn() && (isCreator() || isAssignee());
      allow delete: if isSignedIn() && isCreator();
    }
    
    match /users/{userId}/reminders/{reminderId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }

    match /users/{userId}/meetings/{meetingId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource != null;
      allow delete: if isOwner(userId) && resource != null;
    }

    match /collaborationHubs/{collaborationHubId} {
      function isCollaborator() {
        return isSignedIn() && request.auth.uid in resource.data.userIds;
      }
      allow get, list: if isSignedIn() && (isOwner(resource.data.ownerId) || isCollaborator());
      allow create: if isSignedIn() && isOwner(request.resource.data.ownerId);
      allow update: if isSignedIn() && isOwner(resource.data.ownerId) && resource != null;
      allow delete: if isSignedIn() && isOwner(resource.data.ownerId) && resource != null;
    }
  }
}
